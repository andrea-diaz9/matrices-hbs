<!DOCTYPE html>
<html lang="es-MX">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora de matrices</title>
        <link rel="stylesheet" href="/css/matrices.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    {{!-- SEPARADOR --}}
    <section class="row">
        <div class="col-12" style="height: 25px;"></div>
    </section>
    {{!-- SEPARADOR --}}

    <section class="row">
        <div class="col-5"></div>
        <div class="col-2">
            <a href="/"><button id="btnInicio">Regresar al Inicio</button></a>
        </div>
    </section>
    {{!-- SEPARADOR --}}
    <section class="row">
        <div class="col-12" style="height: 15PX;"></div>
    </section>
    {{!-- SEPARADOR --}}

    <section id="historial" style="display: block;" class="row">
        <h5 style="text-align: center;" class="col-12">{{title}}</h5>

        <table id="tablaHistorial" class="col-12">
        <thead id="colTablaHist" >
            <tr>
                <th id="celdaTitulo" class="col-1">ID</th>
                <th id="celdaTitulo">Orden A</th>
                <th id="celdaTitulo">Matriz A</th>
                <th id="celdaTitulo">Orden B</th>
                <th id="celdaTitulo">Matriz B</th>
                <th id="celdaTitulo">Operaci√≥n</th>
                <th id="celdaTitulo">Orden Resultado</th>
                <th id="celdaTitulo">Resultado</th>
                <th id="celdaTitulo">Fecha</th>
            </tr>
        </thead>
            <tbody>
                {{#each datos}}
                <tr>
                    <td id="celdaRes" style="height: 20px;">{{this.idOp}}</td>
                    <td id="celdaRes">{{this.ordenA}}</td>
                    <td id="celdaRes">{{this.matrizA}}</td>
                    <td id="celdaRes">{{this.ordenB}}</td>
                    <td id="celdaRes">{{this.matrizB}}</td>
                    <td id="celdaRes">{{this.tipoOp}}</td>
                    <td id="celdaRes" class="resultadoMatriz">{{this.ordenR}}</td>
                    <td id="celdaRes" class="resultadoMatriz">{{this.resultado}}</td>
                    <td id="celdaRes">{{this.fechaOp}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>

</body>
</html>