<!DOCTYPE html>
<html lang="es-MX">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora de matrices</title>
        <link rel="stylesheet" href="/css/matrices.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    {{!-- SEPARADOR --}}
    <section class="row">
        <div class="col-12" style="height: 25px;"></div>
    </section>
    {{!-- SEPARADOR --}}

    <section class="row">
        <div class="col-5"></div>
        <div class="col-2">
            <a href="/"><button id="btnInicio">Regresar al Inicio</button></a>
        </div>
    </section>
    {{!-- SEPARADOR --}}
    <section class="row">
        <div class="col-12" style="height: 15PX;"></div>
    </section>
    {{!-- SEPARADOR --}}

    <section id="historial" style="display: block;" class="row">
        <h5 style="text-align: center;" class="col-12">{{title}}</h5>

        <table id="tablaHistorial" class="col-12">
        <thead id="colTablaHist" >
            <tr>
                <th id="celdaTitulo" class="col-1">ID</th>
                <th id="celdaTitulo">Orden A</th>
                <th id="celdaTitulo" class="col-1">Matriz A</th>
                <th id="celdaTitulo">Orden B</th>
                <th id="celdaTitulo" class="col-1">Matriz B</th>
                <th id="celdaTitulo">Operación</th>
                <th id="celdaTitulo">Orden<br>Resultado</th>
                <th id="celdaTitulo"class="col-4">Resultado</th>
                <th id="celdaTitulo" class="col-1">Fecha</th>
                <th id="celdaTitulo" class="col-1">Visualización</th>
            </tr>
        </thead>
            <tbody>
                {{#each datos}}
                <tr>
                    <td id="{{this.idOp}}-id" class="celdaRes">{{this.idOp}}</td>
                    <td id="{{this.idOp}}-ordenA" class="celdaRes">{{this.ordenA}}</td>
                    <td id="{{this.idOp}}-matrizA" class="celdaRes">{{this.matrizA}}</td>
                    <td id="{{this.idOp}}-ordenB" class="celdaRes">{{this.ordenB}}</td>
                    <td id="{{this.idOp}}-matrizB" class="celdaRes">{{this.matrizB}}</td>
                    <td id="{{this.idOp}}-Operacion" class="celdaRes">{{this.tipoOp}}</td>
                    <td id="{{this.idOp}}-ordenR" class="celdaRes-resultadoMatriz">{{this.ordenR}}</td>
                    <td id="{{this.idOp}}-matrizR" class="celdaRes-resultadoMatriz">{{this.resultado}}</td>
                    <td id="{{this.idOp}}-fecha" class="celdaRes">{{this.fechaOp}}</td>
                    <td  class="celdaRes"> 
                        <a href="/operacionId" style="text-decoration: none;" >
                            <button class="btnVisualizar" id="{{this.idOp}}-ver">VER</button> 
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
</body>
</html>